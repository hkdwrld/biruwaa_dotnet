@model Product
<h1> Create Product </h1>

@if (TempData["Error"] != null)
 {
    <div class="alert alert-success" role="alert">
        @TempData["Error"]
    </div>
    }
<form method="post">
    
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" >
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description" >
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Price"></label>
            <input class="form-control" asp-for="Price" >
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="CategoryId"></label>
            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.CategoryList">
                <option value="">Select Category</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label
            " asp-for="ImageUrl"></label>
            <input class="form-control" asp-for="ImageUrl" >
        </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back</a>
</form>